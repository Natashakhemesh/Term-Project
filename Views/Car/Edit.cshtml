@model Wheels_Away.Models.Car

<h2>Edit Car's Rental Price</h2>

<form asp-action="Edit" method="post">
    <div>
        <label asp-for="RentalPrice">Rental Price:</label>
        <input asp-for="RentalPrice" type="number" step="0.01" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
